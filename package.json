{
  "name": "governance-smart-contract",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "prettier": "prettier --write \"contracts/**/*.sol\" \"test/**/*.js\" \"deploy/**/*.js\"",
    "build": "npm run compile",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage --network hardhat",
    "deploy:hardhat": "hardhat deploy --deploy-scripts ./deploy",
    "deploy:remote": "hardhat deploy --deploy-scripts ./deploy --network",
    "test": "npx hardhat test",
    "prepare": "husky install",
    "size": "npx hardhat size-contracts"
  },
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.11.2",
    "hardhat-contract-sizer": "^2.7.0",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "solidity-docgen": "^0.6.0-beta.32",
    "typechain": "^8.1.1"
  }
}
